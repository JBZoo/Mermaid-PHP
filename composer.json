{
    "name"              : "jbzoo/mermaid-php",
    "type"              : "library",
    "description"       : "Generate diagrams and flowcharts with the help of the mermaid script language",
    "license"           : "MIT",
    "keywords"          : [
        "mermaid",
        "mermaid-js",
        "diagrams",
        "flowcharts"
    ],
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"      : "^8.1",
        "ext-json" : "*"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^7.0"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\MermaidPHP\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
